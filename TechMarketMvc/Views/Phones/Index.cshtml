@model IEnumerable<TechMarketMvc.Models.Phone>

<div class="container mt-5">
    <h2 class="text-center mb-4">Our Phones</h2>

    <!-- Filter Input -->
    <div class="form-group">
        <input type="text" id="filterInput" class="form-control" placeholder="Search for phones...">
    </div>

    <!-- Phones Table -->
    <table class="table table-bordered table-striped" id="phonesTable">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Brand</th>
                <th scope="col">Operating System</th>
                <th scope="col">RAM (GB)</th>
                <th scope="col">Storage</th>
                <th scope="col">Price</th>
                <th scope="col">Stock</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var phone in Model)
            {
                <tr>
                    <td><img src="@Url.Content(phone.ImagePath)" alt="@phone.Name" class="img-thumbnail" style="width: 100px; height: auto;" /></td>
                    <td>@phone.Name</td>
                    <td>@phone.Brand</td>
                    <td>@phone.OperatingSystem</td>
                    <td>@phone.RAM</td>
                    <td>@phone.Storage GB</td>
                    <td>$@phone.Price</td>
                    <td>@phone.Stock</td>
                    <td>
                        <a href="@Url.Action("PhoneDetails", "Home", new { id = phone.Id })" class="btn btn-primary btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Filter Script -->
<script>
    document.getElementById('filterInput').addEventListener('keyup', function () {
        var value = this.value.toLowerCase();
        var rows = document.querySelectorAll('#phonesTable tbody tr');

        rows.forEach(function (row) {
            row.style.display = row.textContent.toLowerCase().includes(value) ? '' : 'none';
        });
    });
</script>

<!-- Additional Styling -->
<style>
    .form-group input {
        margin-bottom: 20px;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .img-thumbnail {
        max-width: 100px;
        height: auto;
        object-fit: cover;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }
    
    th, td {
        text-align: center;
        padding: 15px;
    }
</style>
