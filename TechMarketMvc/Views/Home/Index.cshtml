@model TechMarketMvc.ViewModels.ProductViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Our Latest Products</h2>

    <!-- Computers Section -->
    <div class="category-section mb-5">
        <h3 class="text-center mb-4">Latest Computers</h3>
        <div class="row">
            @foreach (var computer in Model.Computers)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content(computer.ImagePath)" alt="@computer.Name" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@computer.Name</h5>
                            <p class="card-text">
                                <strong>Brand:</strong> @computer.Brand <br />
                                <strong>Price:</strong> $@computer.Price
                            </p>
                            <a href="@Url.Action("ComputerDetails", "Home", new { id = computer.Id })" class="btn btn-primary btn-block">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Phones Section -->
    <div class="category-section mb-5">
        <h3 class="text-center mb-4">Latest Phones</h3>
        <div class="row">
            @foreach (var phone in Model.Phones)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content(phone.ImagePath)" alt="@phone.Name" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@phone.Name</h5>
                            <p class="card-text">
                                <strong>Brand:</strong> @phone.Brand <br />
                                <strong>Price:</strong> $@phone.Price
                            </p>
                            <a href="@Url.Action("PhoneDetails", "Home", new { id = phone.Id })" class="btn btn-primary btn-block">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Smartwatches Section -->
    <div class="category-section">
        <h3 class="text-center mb-4">Latest Smartwatches</h3>
        <div class="row">
            @foreach (var smartwatch in Model.Smartwatches)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@Url.Content(smartwatch.ImagePath)" alt="@smartwatch.Name" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@smartwatch.Name</h5>
                            <p class="card-text">
                                <strong>Brand:</strong> @smartwatch.Brand <br />
                                <strong>Price:</strong> $@smartwatch.Price
                            </p>
                            <a href="@Url.Action("SmartwatchDetails", "Home", new { id = smartwatch.Id })" class="btn btn-primary btn-block">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Additional Styling -->
<style>
    .category-section {
        margin-bottom: 50px;
    }

    .card {
        transition: transform 0.2s ease-in-out;
        border: none;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-radius: 5px;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1rem;
        padding: 10px 0;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    
</style>
