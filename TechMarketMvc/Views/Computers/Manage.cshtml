@model IEnumerable<TechMarketMvc.Models.Computer>

<h2>Manage Computers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Processor</th>
            <th>RAM</th>
            <th>Storage</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var computer in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(computer.ImagePath)" alt="@computer.Name" style="width: 100px; height: auto;" />
                </td>
                <td>@computer.Name</td>
                <td>@computer.Brand</td>
                <td>@computer.Processor</td>
                <td>@computer.RAM</td>
                <td>@computer.Storage</td>
                <td>@computer.Price</td>
                <td>@computer.Stock</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "Computers", new { id = computer.Id })">Edit</a>
                    <form method="post" action="@Url.Action("Delete", "Computers", new { id = computer.Id })" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this computer?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" href="@Url.Action("Add", "Computers")">Add New Computer</a>
<a class="btn btn-secondary" href="@Url.Action("Index", "Admin")">Return to Admin Dashboard</a> 
