@model TechMarketMvc.ViewModels.LoginViewModel

<h2 class="text-center my-4">Admin Login</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-sm p-5" style="width: 400px;">
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Username" class="font-weight-bold"></label>
                <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter username" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="font-weight-bold"></label>
                <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Enter password" />
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @ViewData.ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage
                </div>
            }

        </form>
    </div>
</div>

<!-- Additional Styling -->
<style>
    h2 {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 30px;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .form-control-lg {
        font-size: 1.1rem;
        padding: 15px;
        border-radius: 6px;
    }

    .btn {
        font-size: 1.2rem;
        padding: 12px;
    }
</style>
